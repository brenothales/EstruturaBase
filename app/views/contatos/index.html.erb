<% form_tag contatos_enviar_path do %>
  <p>
    <%= label_tag :name %><br/>
    <%= text_field_tag :name %>
  </p>
  <p>
    <%= label_tag :subject %><br/>
    <%= text_field_tag :subject %>
  </p>
  <p>
    <%= label_tag :email %><br/>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :phone %><br/>
    <%= text_field_tag :phone %>
  </p>
  <p>
    <%= label_tag :city %><br/>
    <%= text_field_tag :city %>
  </p>

  <p>
    <%= label_tag :message %><br/>
    <%= text_area_tag :message %>
