<h1>Listing locations</h1>

<table>
  <tr>
    <th>Street</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |l| %>
  <tr>
    <td><%= l.street %></td>
    <td><%= l.city %></td>
    <td><%= link_to 'Show', admin_location_path(l) %></td>
    <td><%= link_to 'Edit', edit_admin_location_path(l) %></td>
    <td><%= link_to 'Destroy', [:admin,l], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

