  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.value %></td>
    <td><%= role.situation %></td>
    <td><%= link_to 'Show', admin_role_path(role) %></td>
    <td><%= link_to 'Edit', edit_admin_role_path(role) %></td>
    <td><%= link_to 'Destroy', [:admin,role], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

